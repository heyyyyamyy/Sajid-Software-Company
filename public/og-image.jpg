<svg width="1200" height="630" viewBox="0 0 1200 630" fill="none" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#0A0A1A;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#1A1A2E;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#0A0A1A;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="goldGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#D4AF37;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#E6C757;stop-opacity:1" />
    </linearGradient>
    <filter id="glow">
      <feGaussianBlur stdDeviation="3" result="coloredBlur"/>
      <feMerge> 
        <feMergeNode in="coloredBlur"/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
  </defs>
  
  <!-- Background -->
  <rect width="1200" height="630" fill="url(#bgGradient)"/>
  
  <!-- Decorative Elements -->
  <circle cx="100" cy="100" r="50" fill="url(#goldGradient)" opacity="0.1"/>
  <circle cx="1100" cy="530" r="80" fill="url(#goldGradient)" opacity="0.1"/>
  <circle cx="200" cy="500" r="30" fill="url(#goldGradient)" opacity="0.15"/>
  <circle cx="1000" cy="150" r="40" fill="url(#goldGradient)" opacity="0.1"/>
  
  <!-- Logo -->
  <g transform="translate(100, 200)">
    <rect width="120" height="120" rx="24" fill="url(#goldGradient)" filter="url(#glow)"/>
    <path d="M40 40 C40 30, 50 30, 60 30 C70 30, 80 30, 80 40 C80 50, 70 50, 60 50 C50 50, 40 50, 40 60 C40 70, 50 70, 60 70 C70 70, 80 70, 80 80 C80 90, 70 90, 60 90 C50 90, 40 90, 40 80" 
          stroke="#0A0A1A" 
          stroke-width="6" 
          fill="none" 
          stroke-linecap="round"/>
  </g>
  
  <!-- Main Text -->
  <text x="280" y="280" font-family="Arial, sans-serif" font-size="72" font-weight="bold" fill="url(#goldGradient)">Sajid Software</text>
  <text x="280" y="340" font-family="Arial, sans-serif" font-size="36" fill="white">Building the Future of Software Intelligence</text>
  <text x="280" y="400" font-family="Arial, sans-serif" font-size="24" fill="#CCCCCC">Premium Software Development • AI Solutions • Digital Innovation</text>
  
  <!-- Bottom Text -->
  <text x="280" y="500" font-family="Arial, sans-serif" font-size="20" fill="url(#goldGradient)">sajidsoftware.com</text>
</svg>